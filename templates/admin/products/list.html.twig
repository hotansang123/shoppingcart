{% extends 'admin/layouts/index.html.twig' %}

{% block content %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Product
                    <small>List</small>
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr align="center">
                        <th>#</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody align="center">
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td><img src="{{ product.image }}" width=60px /></td>
                            <td>{{ product.name }}</td>
                            <td>${{product.price }}</td>
                            <td>{{ product.qty }}</td>
                            <td>
                                <a href="/admin/product/delete/{{ product.id }}" onclick="return confirm('Do you want to delete selected item ?')"><i class="fa fa-times" aria-hidden="true"></i></a>
                                <a href="/admin/product/edit/{{ product.id }}" style="margin-left:1rem;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
{% endblock %}