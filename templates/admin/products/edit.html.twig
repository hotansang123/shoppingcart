{% extends 'admin/layouts/index.html.twig' %}

{% block content %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Product
                        <small>Update</small>
                    </h1>
                    <form action="/admin/product/update/{{ product.id }}" method="POST" enctype="multipart/form-data">

                        <div class="form-group">
                            <label for="title">Name: <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Enter name" id="title" name="title" value="{{ product.name }}" required>
                        </div>
                        <div class="form-group">
                            <label for="price">Price: <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" placeholder="Enter price" id="price" name="price" value="{{ product.price }}" min=1 required>
                        </div>
                        <div class="form-group">
                            <label for="quantity">Qty: <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" placeholder="Enter qty" id="quantity" name="quantity" value="{{ product.qty }}" min=1 required>
                        </div>
                        <div class="form-group">
                            <label for="content">Description:</label>
                            <textarea class="form-control" id="content" name="content">{{ product.description }}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="category_id">Category: <span class="text-danger">*</span></label>
                            <select class="form-control" name="category_id" id="category_id" required>
                                {% for category in categories %}
                                    {% if category_id == category.id %}
                                        <option value="{{ category.id }}" selected>{{ category.name }}</option>
                                    {% else %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endif %}>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="image">Link image: <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" placeholder="Enter link image" id="image" name="image" value="{{ product.image }}" required>
                        </div>
                        <button type="submit" class="btn btn-primary" style="margin-bottom:1rem;">Update</button>
                    </form>
                </div>
            </div>
        </div>    
    </div>
{% endblock %}